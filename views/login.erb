<!DOCTYPE html> 
<html> 
	<head> 
		<title>Life Time Fitness Employee Access - Login</title> 
		<%= partial(:_head) %>
		<script type="text/javascript">
			$(function() {
	            $("#login").click(function() {
	            	BOSSAPI.auth.employee.login({
	            		data : { pin : $('#login_form input[name=pin]').val() },
	            		success : function(data) {
	            			window.location.href = "<%= to('/auth_callback') %>?ssoid=" + data.ssoid;
	            		},
	            		error : function(error) {
	            			alert(error.message);
	            		}
	            	});
	            });
	        });
		</script>
	</head> 
<body> 

<div data-role="page">
	<div data-role="header">
		<h1>Employee Login</h1>
	</div>
	<div data-role="content">
		<form id="login_form">
			<div data-role="fieldcontain">
				<label for="pin">PIN</label>
				<input type="text" name="pin" id="pin" value="" placeholder="f536"/>
			</div>
			<hr/>
			<input id="login" type="button" value="Login" />
		</form>	
	</div>
</div>

</body>
</html>